{% extends 'base.html.twig' %}

{% block body %}
    <div class="header">
        <h2>Ajouter une Fonction</h2>
    </div>
    <div class="content">

        {{ form_start(form) }}
        <div class="form-group row">
            {{ form_label(form.name, 'Titre de la fonction', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.name) }}
            </div>
        </div>
        <div class="form-group row">
            {{ form_label(form.color, 'Couleur d\'affichage (ex : #FF0000)', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.color) }}
            </div>
        </div>
        <div class="row col-12 justify-content-end">
            <input type="submit" value="Ajouter" class="btn btn-success"/>
        </div>
        {{ form_end(form) }}

        <hr>
        <div class="row col-12 justify-content-end">
            <a href="{{ path('fonction_index') }}" class="btn btn-info">Liste des fonctions</a>
        </div>
    </div>
{% endblock %}
