{% extends 'base.html.twig' %}

{% block body %}
    <div class="header">
        <h2>Ajouter un Joueur</h2>
    </div>
    <div class="content">

        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        {{ form_start(form) }}
        <div class="form-group row">
            {{ form_label(form.pseudo, 'Pseudo du joueur', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.pseudo) }}
            </div>
        </div>
        <div class="form-group row">
            {{ form_label(form.url, 'URL Steam', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.url) }}
            </div>
        </div>
        <div class="form-group row">
            {{ form_label(form.functions, 'Fonctions du joueur', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.functions) }}
            </div>
        </div>
        <div class="form-group row">
            {{ form_label(form.lineUp, 'Line Up du joueur', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.lineUp) }}
            </div>
        </div>
        <div class="form-group row">
            {{ form_label(form.comment, 'Commentaires', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.comment) }}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10 offset-sm-2">
                {{ form_widget(form.association) }}
            </div>
        </div>
        <div class="row col-12 justify-content-end">
            <input type="submit" value="Ajouter" class="btn btn-success"/>
        </div>
        {{ form_end(form) }}

        <hr>
        <div class="row col-12 justify-content-end">
            <a href="{{ path('joueur_index') }}" class="btn btn-info">Liste des joueurs</a>
        </div>
    </div>
{% endblock %}
