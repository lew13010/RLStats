{% extends 'base.html.twig' %}
{% block title %}Joueurs{% endblock %}
{% block body %}
    <div class="header">
        <h2>Modifier un Joueur</h2>
    </div>
    <div class="content">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        {{ form_start(edit_form) }}
        <div class="form-group row">
            {{ form_label(edit_form.pseudo, 'Pseudo du joueur', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(edit_form.pseudo) }}
            </div>
        </div>
        <div class="form-group row">
            {{ form_label(edit_form.url, 'URL Steam', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(edit_form.url) }}
            </div>
        </div>
        <div class="form-group row">
            {{ form_label(edit_form.functions, 'Fonctions du joueur', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(edit_form.functions) }}
            </div>
        </div>
        <div class="form-group row">
            {{ form_label(edit_form.lineUp, 'Line Up du joueur', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(edit_form.lineUp) }}
            </div>
        </div>
        <div class="form-group row">
            {{ form_label(edit_form.comment, 'Commentaires', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(edit_form.comment) }}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10 offset-sm-2">
                {{ form_widget(edit_form.association) }}
            </div>
        </div>
        <div class="row col-12 justify-content-end">
            <input type="submit" value="Modifier" class="btn btn-success"/>
            {{ form_end(edit_form) }}
            {{ form_start(delete_form) }}
            <div class="justify-content-end">
                <input type="submit" value="Supprimer" class="btn btn-danger">
            </div>
            {{ form_end(delete_form) }}
        </div>

        <hr>

        <div class="row col-12 justify-content-end">
            <a href="{{ path('joueur_index') }}" class="btn btn-info">Liste des joueurs</a>
        </div>
    </div>
{% endblock %}
