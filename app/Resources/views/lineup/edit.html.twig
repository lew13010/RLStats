{% extends 'base.html.twig' %}

{% block body %}
    <div class="header">
        <h2>Modifier une Line Up</h2>
    </div>

    <div class="content">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        {{ form_start(edit_form) }}
        <div class="form-group row">
            {{ form_label(edit_form.nom, 'Nom de la Line Up', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(edit_form.nom) }}
            </div>
        </div>
        <div class="form-group row">
            {{ form_label(edit_form.tag, 'Tag de la Line Up', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(edit_form.tag) }}
            </div>
        </div>
        <div class="form-group row">
            {{ form_label(edit_form.rankMin, 'Rank Min de la Line Up', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(edit_form.rankMin) }}
            </div>
        </div>
        <div class="form-group row">
            {{ form_label(edit_form.description, 'Description de la Line Up', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(edit_form.description) }}
            </div>
        </div>
        <div class="form-group row">
            {{ form_label(edit_form.imageFile, 'Loge de la Line Up', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(edit_form.imageFile) }}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10 offset-sm-2">
                {{ form_widget(edit_form.esport) }}
            </div>
        </div>
        <div class="row col-12 justify-content-end">
            <input type="submit" value="Ajouter" class="btn btn-success"/>
            {{ form_end(edit_form) }}
            {{ form_start(delete_form) }}
            <div class="justify-content-end">
                <input type="submit" value="Supprimer" class="btn btn-danger">
            </div>
            {{ form_end(delete_form) }}
        </div>

        <hr>
        <div class="row col-12 justify-content-end">
            <a href="{{ path('joueur_index') }}" class="btn btn-info">Liste des Line Ups</a>
        </div>
    </div>
{% endblock %}