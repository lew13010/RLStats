{% extends 'base.html.twig' %}

{% block body %}
    <div class="header">
        <h2>Ajouter une Line Up</h2>
    </div>

    <div class="content">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        {{ form_start(form) }}
        <div class="form-group row">
            {{ form_label(form.nom, 'Nom de la Line Up', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.nom) }}
            </div>
        </div>
        <div class="form-group row">
            {{ form_label(form.tag, 'Tag de la Line Up', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.tag) }}
            </div>
        </div>
        <div class="form-group row">
            {{ form_label(form.rankMin, 'Rank Min de la Line Up', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.rankMin) }}
            </div>
        </div>
        <div class="form-group row">
            {{ form_label(form.description, 'Description de la Line Up', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.description) }}
            </div>
        </div>
        <div class="form-group row">
            {{ form_label(form.imageFile, 'Loge de la Line Up', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.imageFile) }}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10 offset-sm-2">
                {{ form_widget(form.esport) }}
            </div>
        </div>
        <div class="row col-12 justify-content-end">
            <input type="submit" value="Ajouter" class="btn btn-success"/>
        </div>
        {{ form_end(form) }}

        <hr>
        <div class="row col-12 justify-content-end">
            <a href="{{ path('lineup_index') }}" class="btn btn-info">Liste des Line Ups</a>
        </div>
    </div>
{% endblock %}
