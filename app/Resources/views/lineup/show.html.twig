{% extends 'base.html.twig' %}

{% block body %}
    <h1>Lineup</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ lineUp.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ lineUp.nom }}</td>
            </tr>
            <tr>
                <th>Tag</th>
                <td>{{ lineUp.tag }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('lineup_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('lineup_edit', { 'id': lineUp.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
