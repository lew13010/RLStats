{% extends 'base.html.twig' %}

{% block body %}
    <h1>Tier</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tier.id }}</td>
            </tr>
            <tr>
                <th>Tierid</th>
                <td>{{ tier.tierId }}</td>
            </tr>
            <tr>
                <th>Tiername</th>
                <td>{{ tier.tierName }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('tier_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('tier_edit', { 'id': tier.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
