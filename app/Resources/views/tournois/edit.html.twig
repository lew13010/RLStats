{% extends 'base.html.twig' %}
{% block title %}Tournois{% endblock %}
{% block body %}
    <div class="header">
        <h2>Modifier Tournois</h2>
    </div>
    <div class="content">
        {{ form_start(edit_form) }}
        <div class="form-group row">
            {{ form_label(edit_form.dateTournois, 'Date du tournois', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(edit_form.dateTournois) }}
            </div>
        </div>
        <div class="form-group row">
            {{ form_label(edit_form.sites, 'Site du tournois', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(edit_form.sites) }}
            </div>
        </div>
        <div class="form-group row">
            {{ form_label(edit_form.lineUps, 'Line Up participante', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(edit_form.lineUps) }}
            </div>
        </div>
        <div class="form-group row">
            {{ form_label(edit_form.types, 'Type du tournois', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(edit_form.types) }}
            </div>
        </div>
        <div class="form-group row">
            {{ form_label(edit_form.tours, 'RÃ©sultats du tournois', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(edit_form.tours) }}
            </div>
        </div>
        <div class="form-group row">
            {{ form_label(edit_form.commentaires, 'Commentaires du tournois', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(edit_form.commentaires) }}
            </div>
        </div>
        <div class="row col-12 justify-content-end">
            <input type="submit" value="Modifier" class="btn btn-success"/>
            {{ form_end(edit_form) }}
            {{ form_start(delete_form) }}
            <div class="justify-content-end">
                <input type="submit" value="Supprimer" class="btn btn-danger">
            </div>
            {{ form_end(delete_form) }}
        </div>

        <hr>
        <div class="row col-12 justify-content-end">
            <a href="{{ path('site_index') }}" class="btn btn-info">Liste des tournois</a>
        </div>
    </div>
{% endblock %}
