{% extends 'base.html.twig' %}
{% block title %}Tournois{% endblock %}
{% block body %}
    <div class="header">
        <h1>Tournois</h1>
    </div>

    <table>
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ tournois.id }}</td>
        </tr>
        <tr>
            <th>Commentaires</th>
            <td>{{ tournois.commentaires }}</td>
        </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('tournois_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('tournois_edit', { 'id': tournois.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
            <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
