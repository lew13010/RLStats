{% extends 'base.html.twig' %}
{% block title %}Tournois{% endblock %}
{% block body %}
    <div class="header">
        <h2>Tournois creation</h2>
    </div>
    <div class="content">
        {{ form_start(form) }}
        <div class="form-group row">
            {{ form_label(form.dateTournois, 'Date du tournois', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.dateTournois) }}
            </div>
        </div>
        <div class="form-group row">
            {{ form_label(form.sites, 'Site du tournois', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.sites) }}
            </div>
        </div>
        <div class="form-group row">
            {{ form_label(form.lineUps, 'Line Up participante', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.lineUps) }}
            </div>
        </div>
        <div class="form-group row">
            {{ form_label(form.types, 'Type du tournois', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.types) }}
            </div>
        </div>
        <div class="form-group row">
            {{ form_label(form.tours, 'RÃ©sultats du tournois', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.tours) }}
            </div>
        </div>
        <div class="form-group row">
            {{ form_label(form.commentaires, 'Commentaires du tournois', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.commentaires) }}
            </div>
        </div>
        <div class="row col-12 justify-content-end">
            <input type="submit" value="Ajouter" class="btn btn-success"/>
        </div>
        {{ form_end(form) }}

        <hr>
        <div class="row col-12 justify-content-end">
            <a href="{{ path('site_index') }}" class="btn btn-info">Liste des tournois</a>
        </div>
    </div>
{% endblock %}
